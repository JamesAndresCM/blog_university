<h2>Posts</h2>
<span>(*edit on click field titulo & body*)</span>
</br>
<div class="input-group search">
  <input type="search" id="search" class="form-control" placeholder="Ingrese Nombre Usuario o titulo">
  <span class="input-group-btn">
        <button class="btn btn-default" type="button">Buscar</button>
      </span>
</div>
</br>
<table class="table-striped table-responsive table">
  <thead>
  <tr>
    <th>Titulo</th>
    <th>Body</th>
    <th>Usuario</th>
    <th class="center">Fecha Creaci√≥n</th>
    <th>Options</th>
  </tr>
  </thead>

  <tbody>
  <% @posts.each do |post| %>
      <tr id="del_post_<%= post.id %>">
        <td><%= best_in_place post, :title %></td>
        <td><%= best_in_place post, :body, :as => :textarea %></td>
        <td><%= post.user.username %></td>
        <td style="width: 220px;"><%= post.created_at.strftime("%d-%m-%Y a las %H:%M:%S") %></td>
       <td>
          <%= button_to 'Delete', post_path(post),class:'btn btn-sm btn-danger', remote: true, method: :delete, data: { confirm: 'Are you sure?' } %>
        </td>
      </tr>
  <% end %>
  </tbody>
</table>

<br>

